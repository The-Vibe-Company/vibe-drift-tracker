{
  "name": "vibedrift",
  "version": "0.1.3",
  "description": "Track AI interactions per commit and detect vibe drift",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "vibedrift": "./dist/cli.js"
  },
  "scripts": {
    "build": "esbuild src/cli.ts --bundle --outfile=dist/cli.js --format=cjs --platform=node --external:vibedrift-hooks --banner:js=\"#!/usr/bin/env node\"",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "vibedrift-hooks": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "esbuild": "^0.24.0",
    "typescript": "^5.6.3"
  }
}
