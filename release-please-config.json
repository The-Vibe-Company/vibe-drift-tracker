{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "group-pull-requests": true,
  "plugins": [
    {
      "type": "linked-versions",
      "groupName": "vibedrift",
      "components": ["shared", "hooks", "cli"]
    }
  ],
  "packages": {
    "packages/shared": {
      "package-name": "@vibedrift/shared",
      "component": "shared"
    },
    "hooks": {
      "package-name": "@vibedrift/hooks",
      "component": "hooks"
    },
    "cli": {
      "package-name": "vibedrift",
      "component": "cli"
    }
  }
}
