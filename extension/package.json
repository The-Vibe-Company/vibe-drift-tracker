{
  "name": "vibedrift-vscode",
  "displayName": "VibeDrift Tracker",
  "description": "Track your AI prompt count per commit and detect vibe drift in real time",
  "version": "0.1.2",
  "publisher": "TheVibeCompany",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/vibedrift/vibedrift-tracker"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Visualization", "Other"],
  "keywords": ["ai", "claude", "drift", "productivity", "prompts", "vibe-coding"],
  "galleryBanner": {
    "color": "#0a0a0a",
    "theme": "dark"
  },
  "activationEvents": [
    "workspaceContains:.git",
    "onUri"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vibedrift.openSidebar",
        "title": "VibeDrift: Open Sidebar"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vibedrift",
          "title": "VibeDrift",
          "icon": "media/vibedrift.svg"
        }
      ]
    },
    "views": {
      "vibedrift": [
        {
          "id": "vibedrift.sidebarView",
          "name": "VibeDrift",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "VibeDrift Tracker",
      "properties": {
        "vibedrift.apiUrl": {
          "type": "string",
          "default": "https://www.vibedrift.dev",
          "description": "URL of the VibeDrift dashboard API"
        },
        "vibedrift.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for authentication (optional)"
        },
        "vibedrift.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic commit tracking"
        }
      }
    }
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "dev": "pnpm build --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepackage": "pnpm build",
    "package": "vsce package --no-dependencies",
    "install-local": "code --install-extension vibedrift-vscode-*.vsix --force"
  },
  "dependencies": {
    "vibedrift-shared": "workspace:*"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^25.2.1",
    "@vscode/vsce": "^3.2.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.6.3"
  }
}
